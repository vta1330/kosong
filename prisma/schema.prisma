generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Program_kerja {
  id Int @id @default(autoincrement())
  judul String @unique
  sub_judul String
  description Json
  kategori String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Kegiatan {
  id Int @id @default(autoincrement())
  judul String @unique
  description Json
  tanggal String
  kategori String
  image String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Publikasi {
  id Int @id @default(autoincrement())
  judul String @unique
  description Json
  tanggal String
  jenisDokumen Int
  dokumen String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  jenis JenisDokumen @relation(fields: [jenisDokumen], references: [id])
}

model JenisDokumen {
  id Int @id @default(autoincrement())
  nama String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  publikasi Publikasi[]
}